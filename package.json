{
  "name": "root",
  "private": true,
  "scripts": {
    "init": "lerna bootstrap",
    "clean": "find . -type f -name 'package-lock.json' -delete && lerna clean --yes && rm -rf node_modules && rm -rf packages/node_modules",
    "mobile-packager": "cd packages/_mobile && npm run start",
    "web": "cd packages/_web && npm run start",
    "android": "cd packages/_mobile && npm run android",
    "android-release": "cd packages/_mobile && npm run buildReleaseAndroid",
    "ios:setup": "cd packages/_mobile/ios && pod install",
    "ios:device": "cd packages/_mobile && npm run ios:device",
    "ios:simulator": "cd packages/_mobile && npm run ios:simulator",
    "log-android": "cd packages/_mobile && react-native log-android",
    "build": "mkdir -p libs && lerna run build",
    "lint": "lerna run lint",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "docs": "cd doc && npm i && npm run makedoc",
    "bump-version": "lerna version --amend --no-push --force-publish=* --conventional-commits --changelog-preset ./packages/doc/conventional-changelog-marm",
    "make-module": "node ./scripts/make-module.js"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/runtime": "^7.7.2",
    "@types/react": "16.9.12",
    "@types/react-native": "0.60.22",
    "@types/jest": "24.0.23",
    "typescript": "^3.7.2",
    "metro-react-native-babel-preset": "^0.56.0",
    "babel-jest": "^24.9.0",
    "jest": "^24.9.0",
    "eslint": "^6.6.0",
    "@react-native-community/eslint-config": "^0.0.5",
    "prettier": "^1.19.1",
    "lerna": "^3.18.4"
  }
}